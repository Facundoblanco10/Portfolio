---
// Tooltip.astro
interface Props {
  content: string;
}

const { content } = Astro.props;

const baseClasses = `
  relative inline-block group
`;

const baseContentClasses = `
  absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 text-gray-800 bg-gray-100 border border-gray-300 dark:bg-secondary-700 dark:border-secondary-700 dark:text-white text-center rounded-md px-2 py-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200 z-10
`;

const bgGradientClasses = `
  absolute inset-0 w-full h-full rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-200 -z-10
`;
---

<div class={baseClasses}>
  <div class="relative z-10 p-4">
    <slot />
    <div
      class={bgGradientClasses}
      style="background: radial-gradient(circle at center, rgb(0, 95, 184, .5), transparent 70%);"
    >
    </div>
  </div>
  <span class={baseContentClasses}>
    {content}
  </span>
</div>
