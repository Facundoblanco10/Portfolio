---
import GithubIcon from "../icons/GithubIcon.astro";
import LinkedinIcon from "../icons/LinkedinIcon.astro";
import SocialButton from "../SocialButton.astro";
import MailIcon from "../icons/MailIcon.astro";
---

<section
  id="home"
  class="flex flex-col-reverse sm:flex-row items-center justify-center gap-8 text-white h-140 mt-20 sm:mt-0"
>
  <div class="text-center md:text-left space-y-4 max-w-2xl">
    <h2 class="text-5xl md:text-6xl font-bold font-josefin leading-14">
      Hi, my name is <span class="text-primary-400 text-nowrap">Facundo Blanco</span>
    </h2>
    <p class="text-2xl md:text-3xl font-semibold">
      I am a <span class="text-primary-400 text-nowrap">Software Developer</span
      > from Uruguay and here is my portfolio.
    </p>
    <ul class="flex justify-center md:justify-start flex-wrap gap-4">
      <SocialButton href="https://www.linkedin.com/in/facundoblanco1/">
        <LinkedinIcon />
        <span>LinkedIn</span>
      </SocialButton>
      <SocialButton href="https://github.com/Facundoblanco10">
        <GithubIcon />
        <span>GitHub</span>
      </SocialButton>
      <SocialButton href="mailto:facundoblancov@gmail.com">
        <MailIcon />
        <span>facundoblancov@gmail.com</span>
      </SocialButton>
    </ul>
  </div>
  <div class="flex-shrink-0 w-52 rounded-full max-w-[40svw]  overflow-hidden">
    <img
      src="/images/me.jpg"
      alt="Facundo Blanco"
      class="w-full h-full transition hover:scale-105 object-cover"
    />
  </div>
</section>
