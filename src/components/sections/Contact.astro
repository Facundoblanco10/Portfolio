---
// Contact.astro
import GithubIcon from "../icons/GithubIcon.astro";
import LinkedinIcon from "../icons/LinkedinIcon.astro";
import SocialButton from "../SocialButton.astro";
import MailIcon from "../icons/MailIcon.astro";
---

<section
  id="contact"
  class="flex flex-col items-center justify-center gap-8 text-white py-12"
>
  <div class="text-center space-y-4 max-w-2xl">
    <h2 class="text-4xl md:text-5xl font-bold font-josefin leading-14">
      Contact Me
    </h2>
    <p class="text-2xl md:text-3xl font-semibold">
      Feel free to reach out to me through any of the following platforms:
    </p>
    <ul class="flex justify-center flex-wrap gap-4">
      <SocialButton href="https://www.linkedin.com/in/facundoblanco1/">
        <LinkedinIcon />
        <span>LinkedIn</span>
      </SocialButton>
      <SocialButton href="https://github.com/Facundoblanco10">
        <GithubIcon />
        <span>GitHub</span>
      </SocialButton>
      <SocialButton href="mailto:facundoblancov@gmail.com">
        <MailIcon />
        <span>facundoblancov@gmail.com</span>
      </SocialButton>
    </ul>
  </div>
</section>
