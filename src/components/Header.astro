---
interface NavLink {
  name: string;
  href: string;
}

const navLinks: NavLink[] = [
  { name: "Home", href: "#home" },
  { name: "Experience", href: "#experience" },
  { name: "Projects", href: "#projects" },
  { name: "About", href: "#about" },
  { name: "Technologies", href: "#technologies" },
  { name: "Contact", href: "#contact" },
];
---

<header class="bg-transparent text-white fixed w-full z-10 mt-4">
  <div class="flex justify-center max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div
      id="nav-container"
      class="flex justify-center w-auto transition-colors duration-300 rounded-full px-5 py-2 bg-opacity-0 bg-secondary-900"
    >
      <div class="hidden md:flex md:items-center md:space-x-4">
        {navLinks.map((link) => (
          <a href={link.href} class="text-lg hover:text-primary-400 leading-5">
            {link.name}
          </a>
        ))}
      </div>
      <div class="flex items-center md:hidden">
        <button
          class="text-gray-400 hover:text-white focus:outline-none focus:text-white"
        >
          <svg
            class="h-6 w-6"
            stroke="currentColor"
            fill="none"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.addEventListener("scroll", () => {
      const navContainer = document.getElementById("nav-container");
      if (navContainer !== null) {
        if (window.scrollY > 50) {
          navContainer.classList.remove("bg-opacity-0");
          navContainer.classList.add("bg-opacity-90");
        } else {
          navContainer.classList.remove("bg-opacity-90");
          navContainer.classList.add("bg-opacity-0");
        }
      }
    });
  });
</script>
