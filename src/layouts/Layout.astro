---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative">
    <div class="bg-gradient"></div>
    <div class="relative z-10">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  /* Define el gradiente en una clase personalizada */
  .bg-gradient {
    background: radial-gradient(circle at top center, var(--color-primary) -140%, black 150%);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1; /* Asegura que esté detrás del contenido */
  }

  /* Define tu color primario en variables CSS */
  :root {
    --color-primary: #003566; /* Cambia este color por tu color primario */
  }
  html {
    font-family: 'Josefin Sans', sans-serif;
    background: #13151a;
    background-size: 224px;
  }
</style>
